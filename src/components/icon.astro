---
import logoImage from "assets/logo.png";
import { Picture } from "astro:assets";
---


<main id="main">
    <a href="/" id="logo-link" style={{ display: 'flex', alignItems: 'center', textDecoration: 'none', color: '#333' }}>
        <Picture
          src={logoImage}
          alt="DeFiTrace"
          widths={[20, 40, 600]}
          sizes="(max-width: 80px) 10vw, (max-width: 400px) 20vw, 600px"
          loading="eager"
          format="avif"
          style={{ width: 'auto', height: 'auto', maxWidth: '50px', maxHeight: '50px', marginRight: '10px' }}
        />
        <span id="logo-title" style={{ fontSize: '18px', fontWeight: 'bold' }}>DeFiTrace</span>
      </a>
</main>