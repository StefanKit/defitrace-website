---
import { Picture } from "astro:assets";
import heroImage from "../../public/background.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-12 pb-8 md:pt-12 md:pb-20">
  <div class="md:order-1 hidden md:block rounded-lg overflow-hidden shadow-xl">
    <Picture
      src={heroImage}
      alt="DeFiTrace"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      DeFiTrace
    </h1>
    <p class=" flex flex-col text-lg mt-4 text-slate-600 max-w-md mx-auto ">
      Data-driven method to analyse illicit payment cross-ledger flows in DeFi-ecosystems
    </p>
  </div>
</main>
